@inherits LayoutComponentBase

@inject MyAuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavManager

<div class="container">

    <div class="sidebar">
        <svg xmlns="http://www.w3.org/2000/svg" width="38" height="38" viewBox="0 0 60.237 60.237">
            <defs>
                <style>
                    .logo {
                        fill: #ec87e4;
                    }
                </style>
            </defs>
            <path id="Icon_simple-letterboxd" data-name="Icon simple-letterboxd" class="logo"
                d="M20.807,42.045V18.071H16.43V12.047H32.312v6.024H27.93V42.1h9.851V35.53h7.126V48.19H16.427V42.045h4.382ZM0,30.119A30.119,30.119,0,1,0,30.119,0,30.117,30.117,0,0,0,0,30.119Z" />
        </svg>

        <nav>
            <NavLink href="/dashboard" ActiveClass="nav-active" Match="NavLinkMatch.All">
                Home
            </NavLink>

            <NavLink href="/dashboard/dictionaries" ActiveClass="nav-active">
                Dictionaries
            </NavLink>

            <NavLink href="/dashboard/leaderboard" ActiveClass="nav-active">
                Leaderboards
            </NavLink>

            <NavLink href="/dashboard/profile" ActiveClass="nav-active">
                Profile
            </NavLink>
        </nav>
    </div>

    <div class="content">
        <nav class="top-nav">
            <button @onclick="OnLogoutClick">logout</button>
        </nav>

        <main>
            @Body
        </main>
    </div>

</div>

@code
{
    public async Task OnLogoutClick()
    {
        await AuthStateProvider.Logout();

        NavManager.NavigateTo("");
    }
}